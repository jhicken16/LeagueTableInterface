@{
    ViewData["title"] = "Teams";
    ViewData["style"] = "~/css/TeamsInfo.css";
}
@model League.Models.TeamUtility;

<div class="container bottom-margin">
    <div class="row">
        <div class="col-6 justify-content-between verticle-container">


            <div class="flex-row">
                <h1 class="title">@Model.Team.Name</h1>
            </div>


            <div class="flex-row">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Win</th>
                            <th>Losses</th>
                            <th>Stadium</th>
                            <th>City</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tableRow">
                            <td>@Model.Team.Win</td>
                            <td>@Model.Team.Loss</td>
                            <td>@Model.Team.Stadium</td>
                            <td>@Model.Team.City</td>
                            <td>@Model.Team.State</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container col-6">
            <img src="@Url.Content(Model.FileNames[0])" class="img-fluid" />
        </div>
    </div>
</div>
<div class="container row bottom-margin">
    <div class="container col-4">
        <img src="@Url.Content(Model.FileNames[1])" class="img-fluid" />
    </div>
    <div class="container col-8">
        <img src="@Url.Content(Model.FileNames[2])" class="img-fluid" />
    </div>
</div>
<div class="flex-row bottom-margin">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Player Id</th>
                <th>Team Id</th>
                <th>Number</th>
                <th>Position</th>
                <th>Name</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Age</th>
                <th>Birth Date</th>
                <th>Experience</th>
                <th>Draft Year</th>
                <th>Draft Round</th>
                <th>Draft Pick</th>
                <th>College</th>
                <th>Rank</th>
                <th>Rating</th>
                <th>Depth</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model.players)
            {
                <tr class="tableRow">
                    <td>@player.PlayerId</td>
                    <td>@player.TeamId</td>
                    <td>@player.Number</td>
                    <td>@player.Position</td>
                    <td>@player.Name</td>
                    <td>@player.Height</td>
                    <td>@player.Weight</td>
                    <td>@player.Age</td>
                    <td>@player.BirthDate</td>
                    <td>@player.Experience</td>
                    <td>@player.DraftYear</td>
                    <td>@player.DraftRound</td>
                    <td>@player.DraftPick</td>
                    <td>@player.College</td>
                    <td>@player.Rank</td>
                    <td>@player.Rating</td>
                    <td>@player.Depth</td>
                    <td><a asp-controller="Player" asp-action="Index" asp-route-id="@player.PlayerId">Player Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>







          